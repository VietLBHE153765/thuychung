<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CategoryServiceController</servlet-name>
        <servlet-class>controller.CategoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>introduceController</servlet-name>
        <servlet-class>controller.introduceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>serviceController</servlet-name>
        <servlet-class>controller.serviceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>contactController</servlet-name>
        <servlet-class>controller.contactController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>productController</servlet-name>
        <servlet-class>controller.productController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>homeController</servlet-name>
        <servlet-class>controller.homeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>selectproduct</servlet-name>
        <servlet-class>controller.selectproduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>productdetailcontroller</servlet-name>
        <servlet-class>controller.productdetailcontroller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryServiceController</servlet-name>
        <url-pattern>/categoryservice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>introduceController</servlet-name>
        <url-pattern>/gioithieu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>serviceController</servlet-name>
        <url-pattern>/dichvu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>contactController</servlet-name>
        <url-pattern>/lienhe</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productController</servlet-name>
        <url-pattern>/sanpham</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>selectproduct</servlet-name>
        <url-pattern>/loaisanpham</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productdetailcontroller</servlet-name>
        <url-pattern>/chitietsanpham</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
